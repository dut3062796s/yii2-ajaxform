{
  "name": "light/yii2-ajaxform",
  "description": "yii2 activeform ActiveForm ajax",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "lichunqiang",
      "email": "light-li@hotmail.com"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "yiisoft/yii2": "^2.0.6",
    "bower-asset/jquery-form": "~3.51"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.0"
  },
  "autoload-dev": {
    "psr-4": {
      "light\\widgets\\": "src"
    }
  },
  "extra": {
    "asset-repositories": {
      "bower-asset/jquery-form": {
        "type": "bower-vcs",
        "url": "https://github.com/malsup/form.git"
      }
    },
    "asset-installer-paths": {
      "npm-asset-library": "vendor/npm",
      "bower-asset-library": "vendor/bower"
    }
  }
}
